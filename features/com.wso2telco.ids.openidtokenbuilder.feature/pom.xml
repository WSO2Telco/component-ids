    <build>
        <plugins>
            <plugin>
                <groupId>org.wso2.maven</groupId>
                <artifactId>carbon-p2-plugin</artifactId>
                <version>${carbon.p2.plugin.version}</version>
                <executions>
                    <execution>
                        <id>p2-feature-generation</id>
                        <phase>package</phase>
                        <goals>
                            <goal>p2-feature-gen</goal>
                        </goals>
                        <configuration>
                            <id>com.wso2telco.ids.openidtokenbuilder</id>
                            <propertiesFile>../feature.properties</propertiesFile>
                            <adviceFile>
                                <properties>
                                    <propertyDef>org.wso2.carbon.p2.category.type:server</propertyDef>
                                    <propertyDef>org.eclipse.equinox.p2.type.group:true</propertyDef>
                                </properties>
                            </adviceFile>
                            <bundles>
                                <bundleDef>com.wso2telco.ids:openid-token-builder:${com.wso2telco.ids.version}</bundleDef>
				 <bundleDef>com.jayway.jsonpath.wso2:json-path:${com.jayway.jsonpath.wso2.version}</bundleDef>
				<bundleDef>net.minidev.wso2:json-smart:${net.minidev.wso2.version}</bundleDef>
				<bundleDef>org.codehaus.jettison.wso2:jettison:${org.codehaus.jettison.wso2.version}</bundleDef>	
                            </bundles>
				<!--includedFeatures>	    
					<includedFeatureDef>com.fasterxml.jackson.core:jackson-core:2.2.3</includedFeatureDef>
        		                 <includedFeatureDef>org.wso2.orbit.com.fasterxml.jackson.core:jackson-databind:2.2.3.wso2v1</includedFeatureDef>
	                	        <includedFeatureDef>com.fasterxml.jackson.core:jackson-annotations:2.2.3</includedFeatureDef>
				</includedFeatures-->
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>
