							com.wso2telco.core.config.*
						</Import-Package>
						<Export-Package>com.wso2telco.gsma*, com.wso2telco.historylog.*</Export-Package>
						<DynamicImport-Package>*</DynamicImport-Package>
					</instructions>
				</configuration>
			</plugin>
<plugin>
