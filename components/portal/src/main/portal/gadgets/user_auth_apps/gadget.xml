    <Content type="html" view="home">
        <![CDATA[
        <script src="/portal/gadgets/user_auth_apps/js/jquery.min.js" type="text/javascript"></script>
        <script src="/portal/gadgets/user_auth_apps/js/main.js" type="text/javascript"></script>
        <script src="/portal/gadgets/user_auth_apps/js/modal.js" type="text/javascript"></script>
        <script src="/portal/gadgets/user_auth_apps/js/gadget.js" type="text/javascript"></script>

        <link rel="stylesheet" href="/portal/gadgets/user_auth_apps/js/ui/css/main.css">
        <link rel="stylesheet" href="/portal/gadgets/user_auth_apps/js/ui/css/bootstrap.css">
        <link rel="stylesheet" href="/portal/gadgets/user_auth_apps/js/ui/css/bootstrap.min.css">
        <link rel="stylesheet" href="/portal/gadgets/user_auth_apps/js/ui/css/bootstrap-theme.css">
        <link rel="stylesheet" href="/portal/gadgets/user_auth_apps/js/ui/css/bootstrap-missing.css">
        <link rel="stylesheet" href="/portal/gadgets/user_auth_apps/js/ui/css/bootstrap-theme.min.css">
        <link rel="stylesheet" href="/portal/gadgets/user_auth_apps/js/ui/css/dialog.css">
        <link rel="stylesheet" href="/portal/gadgets/user_auth_apps/js/ui/font-awesome/css/font-awesome.min.css">
        <link rel="stylesheet" href="/portal/gadgets/user_auth_apps/js/ui/css/smoothness/jquery-ui-1.10.3.custom.min.css">
        <link rel="stylesheet" href="/portal/gadgets/user_auth_apps/js/ui/css/smoothness/jqueryui-themeroller.css">


        <script type="text/javascript">
            var cookie = null;
            var json = null;
            var userName = null;
            $(function WindowLoad(event) {
				var serverUrl= getServerUrl();
				url = 'wss://' + serverUrl + 'dashboard/session_manager.jag';
                //url = 'wss://localhost:9444/dashboard/session_manager.jag';
				console.log('url #2 : '+url);
                ws = new WebSocket(url);

                ws.onopen = function () {
                    console.log("web Socket onopen. ");
                    ws.send("First Message open");
                };

                ws.onmessage = function (event) {
                    var obj = $.parseJSON(event.data);
                    cookie = obj.cookie;
                    userName = obj.user;
                    if (cookie != null) {
                        var str = "/portal/gadgets/user_auth_apps/index.jag?cookie=" + cookie + "&user=" + userName;

                        $.ajax({
                            type:"GET",
                            url:str

                        })
                                .done(function (data) {
    var element = "<div class=\"modal fade\" id=\"messageModal\">\n" +
        "  <div class=\"modal-dialog\">\n" +
        "    <div class=\"modal-content\">\n" +
        "      <div class=\"modal-header\">\n" +
        "        <button type=\"button\" class=\"close\" data-dismiss=\"modal\" aria-hidden=\"true\">&times;</button>\n" +
        "        <h3 class=\"modal-title\">Modal title</h4>\n" +
        "      </div>\n" +
        "      <div class=\"modal-body\">\n" +
        "        <p>One fine body&hellip;</p>\n" +
        "      </div>\n" +
        "      <div class=\"modal-footer\">\n" +
        "      </div>\n" +
        "    </div>\n" +
        "  </div>\n" +
        "</div>";


	  if(data && data.trim().length > 0) {
		json = $.parseJSON(data);
	  }

      if(json == null){
	        $("#message").append(element);
            message({content:'No authorized applications found !', type:'info', cbk:function () {
            cancel();
            } });
            
}
else {

                                    drawPage();
}

                                })
                                .fail(function () {
                                    console.log('error');

                                })
                                .always(function () {
                                    console.log('completed');
                                });
                    }
                };
                ws.onclose = function () {
                    console.log("web Socket onclose. ");
                };
            });

            function submitUpdate() {

                var str = "/portal/gadgets/user_profile/controllers/my-profile/edit-finish.jag";
                $.ajax({
                    url:str,
                    type:"POST",
                    data:$('#gadgetForm').serialize() + "&profileConfiguration=default" + "&cookie=" + cookie + "&user=" + userName
                })
                        .done(function (data) {

                        })
                        .fail(function () {
                            console.log('error');

                        })
                        .always(function () {
                            console.log('completed');
                        });

            }
			function getServerUrl() {
				var str = "/portal/site/jagg/site.jag?action=js";
				var serverUrl;
			    $.ajax({
			        type:"GET",
			        url:str,
			        async: false
			    })
			    .done(function (data) {
			    	var data = $.parseJSON(data);
			    	serverUrl = data.carbon_url;
			    })
			    .fail(function () {
			        console.log('error');
			    })
			    return serverUrl;
			}

        </script>


        <form id="gadgetForm" class="form-horizontal">
            <div id="gadgetBody"></div>
	    <div id="message"></div>
        </form>
        ]]>
